#!/bin/bash

################################################################
######                    BSPWM CONFIG                    ######
################################################################

################################
###     Launch Programs      ###
################################

pkill sxhkd
sxhkd &

pkill compton
compton &

#Restore wallpaper
nitrogen --restore

#Set up 5 workspaces
bspc monitor -d 1 2 3 4 5

# Launching polybar
bash "$HOME"/.config/polybar/launch.sh --blocks

################################
###      Set Parameters      ###
################################
#Fix pointer
xsetroot -cursor_name left_ptr

#Gaps and border thickness
bspc config border_width	0
bspc config window_gap		10
bspc config automatic_scheme    automatic

bspc config split_ratio		0.50
bspc config focus_follows_pointer	true
bspc config pointer_modifier	mod1

# Starting SXHKD Keyboard Daemon
pgrep -x sxhkd > /dev/null || sxhkd &


################################
###        BSPC Rules        ###
################################

bspc rule -a Gnome-calculator state=floating
bspc rule -a Gnome-terminal state=floating
bspc rule -a Gnome-system-monitor state=floating
